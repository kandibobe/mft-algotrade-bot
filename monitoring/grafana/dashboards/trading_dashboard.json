{
  "dashboard": {
    "title": "Trading Bot Performance",
    "tags": ["trading", "performance", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Portfolio Value (24h)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "stoic_citadel_portfolio_value_usd",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "title": "Win Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(stoic_citadel_trades_total{status=\"win\"}[1h]) / rate(stoic_citadel_trades_total[1h])",
            "refId": "A",
            "legendFormat": "Win Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.5},
                {"color": "green", "value": 0.7}
              ]
            }
          }
        }
      },
      {
        "title": "ML Inference Latency (p95)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(stoic_citadel_ml_inference_latency_ms_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 1
          }
        }
      },
      {
        "title": "Circuit Breaker Trips",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "changes(stoic_citadel_circuit_breaker_status[24h])",
            "refId": "A",
            "legendFormat": "Trips"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "title": "Open Positions",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "stoic_citadel_open_positions",
            "refId": "A",
            "legendFormat": "Positions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "title": "Daily PnL %",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "stoic_citadel_daily_pnl_pct",
            "refId": "A",
            "legendFormat": "Daily PnL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": -10,
            "max": 10,
            "thresholds": {
              "steps": [
                {"color": "red", "value": -5},
                {"color": "yellow", "value": 0},
                {"color": "green", "value": 2}
              ]
            }
          }
        }
      },
      {
        "title": "Order Latency (p95)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(stoic_citadel_order_latency_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3
          }
        }
      },
      {
        "title": "Trades Total",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "rate(stoic_citadel_trades_total[5m])",
            "refId": "A",
            "legendFormat": "Trades/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1
  }
}
