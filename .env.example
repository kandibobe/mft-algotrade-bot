# ============================================================
# STOIC CITADEL - Environment Configuration
# ============================================================
# 
# IMPORTANT: Copy this file to .env and fill in your values
#            NEVER commit .env to version control!
#
# Generate secure passwords: 
#   .\stoic.ps1 generate-secrets
# ============================================================

# ============================================================
# REQUIRED - Bot will not start without these
# ============================================================

# Freqtrade API credentials (for FreqUI access)
FREQTRADE_API_USERNAME=stoic_admin
FREQTRADE_API_PASSWORD=

# PostgreSQL database password
POSTGRES_PASSWORD=

# Jupyter Lab access token
JUPYTER_TOKEN=

# ============================================================
# EXCHANGE CREDENTIALS - Required for live trading
# ============================================================

# Binance API (get from: https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ============================================================
# TELEGRAM NOTIFICATIONS (Optional)
# ============================================================

# Create bot: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Get chat ID: @userinfobot 
TELEGRAM_CHAT_ID=

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

POSTGRES_USER=stoic_trader
POSTGRES_DB=trading_analytics

# ============================================================
# STRATEGY SELECTION
# ============================================================

# Available strategies:
#   - StoicStrategyV1 (default, trend following)
#   - StoicCitadelV2 (advanced regime detection)
#   - StoicEnsembleStrategy (multi-strategy)
STRATEGY=StoicStrategyV1

# ============================================================
# TRADING MODE
# ============================================================

# true = paper trading (safe)
# false = REAL MONEY (dangerous!)
DRY_RUN=true

# Paper trading wallet size
DRY_RUN_WALLET=1000

# ============================================================
# ADVANCED SETTINGS (usually don't need to change)
# ============================================================

# Maximum concurrent trades
MAX_OPEN_TRADES=3

# What percentage of wallet to use
TRADABLE_BALANCE_RATIO=0.99

# Stake per trade
STAKE_AMOUNT=unlimited

# ============================================================
# PORTS (change if conflicts exist)
# ============================================================

# Freqtrade API
FREQTRADE_PORT=8080

# FreqUI Dashboard
FREQUI_PORT=3000

# Jupyter Lab
JUPYTER_PORT=8888

# PostgreSQL
POSTGRES_PORT=5433

# Portainer
PORTAINER_PORT=9000
