# ============================================================
# STOIC CITADEL - Environment Configuration Template
# ============================================================
# 
# IMPORTANT: 
# 1. Copy this file to .env: `cp .env.example .env`
# 2. Fill in your values
# 3. NEVER commit .env to version control!
#
# Generate secure passwords: 
#   python scripts/generate_secrets.py
# ============================================================

# ============================================================
# APPLICATION IDENTITY
# ============================================================

APP_NAME=StoicCitadel
APP_VERSION=2.3.0
APP_ENVIRONMENT=development  # development, staging, production

# ============================================================
# EXCHANGE CREDENTIALS (Required for live trading)
# ============================================================

# Binance API (get from: https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Optional: Other exchanges (uncomment and configure as needed)
# KRAKEN_API_KEY=
# KRAKEN_API_SECRET=
# COINBASE_API_KEY=
# COINBASE_API_SECRET=

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

POSTGRES_USER=stoic_trader
POSTGRES_PASSWORD=generate_secure_password_here
POSTGRES_DB=trading_analytics
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis for caching and real-time data
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================
# WEB INTERFACE CREDENTIALS
# ============================================================

# FreqUI Dashboard
FREQTRADE_API_USERNAME=stoic_admin
FREQTRADE_API_PASSWORD=generate_secure_password_here
FREQTRADE_API_PORT=8080

# Jupyter Lab (for research and analysis)
JUPYTER_TOKEN=generate_secure_token_here
JUPYTER_PORT=8888

# ============================================================
# MONITORING & OBSERVABILITY
# ============================================================

# Prometheus metrics
PROMETHEUS_PORT=9090

# Grafana dashboard
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Health check endpoint
HEALTH_CHECK_PORT=8000

# ============================================================
# NOTIFICATIONS & TELEGRAM BOT
# ============================================================

# Telegram Bot (Required for Alerts)
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# OpenAI (Optional, for Analytics Chat)
OPENAI_API_KEY=

# Optional Integrations (for enhanced Market Data)
# Only needed if you use News/Forex/Economic features
NEWS_API_ORG_KEY=       # For general news
CRYPTO_PANIC_API_KEY=   # For crypto news
ALPHA_VANTAGE_API_KEY=  # For forex/stocks
FRED_API_KEY=           # For economic data
ETHERSCAN_API_KEY=      # For gas prices
GLASSNODE_API_KEY=      # For on-chain metrics

# Slack Webhook (optional)
SLACK_WEBHOOK_URL=

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_RECIPIENT=

# ============================================================
# TRADING CONFIGURATION
# ============================================================

# Trading mode
DRY_RUN=true  # true = paper trading, false = live trading
DRY_RUN_WALLET=10000  # Paper trading wallet size (USD)

# Strategy selection
STRATEGY=StoicEnsembleStrategyV6 # Options: StoicEnsembleStrategyV4, StoicEnsembleStrategyV3, StoicEnsembleStrategyV2

# Risk management
MAX_OPEN_TRADES=3
TRADABLE_BALANCE_RATIO=0.99
STAKE_AMOUNT=unlimited
STOPLOSS=-0.02  # -2% default stop loss
MAX_DRAWDOWN=-0.10  # -10% maximum drawdown

# ============================================================
# ML PIPELINE CONFIGURATION
# ============================================================

# Feature engineering
FEATURE_WINDOW=50  # Window for technical indicators
SCALING_METHOD=standard  # standard, minmax, robust

# Model training
MODEL_TYPE=ensemble  # xgboost, random_forest, lightgbm, ensemble
TRAIN_TEST_SPLIT=0.8
CROSS_VALIDATION_FOLDS=5

# Hyperparameter optimization
HYPEROPT_TRIALS=100
HYPEROPT_TIMEOUT=3600  # 1 hour

# ============================================================
# LOGGING CONFIGURATION
# ============================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json, text
LOG_FILE=user_data/logs/stoic_citadel.log

# ELK Stack integration (optional)
ELASTICSEARCH_HOST=
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=stoic-citadel-logs

# ============================================================
# NETWORK PORTS
# ============================================================

# Application ports
FREQTRADE_PORT=8080
FREQUI_PORT=3000
JUPYTER_PORT=8888
POSTGRES_PORT=5432
REDIS_PORT=6379

# Monitoring ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
HEALTH_CHECK_PORT=8000

# ============================================================
# ADVANCED SETTINGS
# ============================================================

# Data retention
DATA_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30

# Performance tuning
WORKER_THREADS=10
BATCH_SIZE=1000
CACHE_TTL=300  # 5 minutes

# Security
API_RATE_LIMIT=100  # requests per minute
SESSION_TIMEOUT=3600  # 1 hour
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================
# DEVELOPMENT SETTINGS
# ============================================================

# Debug mode (do not enable in production!)
DEBUG=false
RELOAD=false  # Auto-reload on code changes

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_trading
TEST_REDIS_URL=redis://localhost:6379/1

# ============================================================
# GENERATED SECRETS (run generate_secrets.py to populate)
# ============================================================

# SECRET_KEY=generated_secret_key_here
# JWT_SECRET=generated_jwt_secret_here
# ENCRYPTION_KEY=generated_encryption_key_here

# ============================================================
# QUICK START INSTRUCTIONS
# ============================================================
#
# 1. Copy this file: cp .env.example .env
# 2. Generate secrets: python scripts/generate_secrets.py
# 3. Configure exchange API keys
# 4. Set passwords for services
# 5. Start services: docker-compose up -d
#
# Access points:
#   - FreqUI Dashboard: http://localhost:3000
#   - Jupyter Lab: http://localhost:8888
#   - Grafana: http://localhost:3001
#   - Health checks: http://localhost:8000/health
#
# ============================================================
